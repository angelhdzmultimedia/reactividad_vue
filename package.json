{
  "name": "node-starter",
  "version": "0.0.0",
  "scripts": {
    "start:servidor": "ts-node-dev --respawn servidor/src/main.ts",
    "start:cliente": "cd cliente && npm install && npm run dev",
    "connect:cliente": "node start_cliente.mjs",
    "dev": "npm install &&  concurrently \"npm run start:servidor\" \"npm run connect:cliente\""
  },
  "dependencies": {
    "concurrently": "^7.2.1",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.18.1",
    "node-fetch": "^3.2.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.38",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.2"
  }
}
